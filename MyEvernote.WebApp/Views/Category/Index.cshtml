
@model IEnumerable<MyEvernote.Entities2.Category>


@{
    ViewBag.Title = "Kategoriler";
}



<div class="row">
    <div class="col-md-10 offset-1">
        <h2>Kategoriler</h2>
        <hr />

    </div>
</div>
<div class="row">
    <div class="col-md-10 offset-1">
        <p>
            <a href="/Category/Create" class="btn btn-primary">
                <i class="fa fa-plus"></i>Create
            </a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CretedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CretedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsername)
                    </td>
                    <td>
                        <a href="/Category/Edit/@item.Id" class="btn btn-warning btn-sm" title="Edit">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="/Category/Details/@item.Id" class="btn btn-info btn-sm" title="Details">
                            <i class="fa fa-search"></i>
                        </a>
                        <a href="/Category/Delete/@item.Id" class="btn btn-danger btn-sm" title="Delete">
                            <i class="fa fa-trash"></i>
                        </a>

                    </td>
                </tr>
            }

        </table>

    </div>

</div>
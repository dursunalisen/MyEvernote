@using MyEvernote.Entities2.ValueObjects
@model LoginViewModel
@{
    ViewBag.Title = "Giriş Sayfası";
}


<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />

@using (Html.BeginForm())
{

    <section class="login-info">
        <div class="container">
            <div class="row main ">


                <div class="main-content">

                    <div class="form-header">
                        <h1 class="text-center ">Giriş Formu </h1>
                    </div>
                    <br />
                    @Html.ValidationSummary(false)
                    @if (ViewBag.SetLink != null)
                    {
                        <a href="@ViewBag.SetLink" class="btn btn-primary">Activate</a>
                    }


                    <div class="input-group ">
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı Adınız" })
                    </div>
                    <div class="input-group">
                        <!-- Bu kısımda type password yaparak LoginViewModel deki Datatype özelliğini açmış olduk ve ya ezmiş olduk diyebiliriz
                        Çünkü TextBoxFor o özelliği tanımıyor ve password alanı gizlenmiyor -->
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Sifreniz", type = "password" })
                    </div>
                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Giriş</button>
                    </div>


                </div>
            </div>
        </div>
    </section>

}

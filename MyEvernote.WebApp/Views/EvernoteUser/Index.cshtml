@model IEnumerable<MyEvernote.Entities2.EvernoteUser>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-10 offset-1">
        <h2>Index</h2>
        <hr />

    </div>
</div>
<div class="row">
    <div class="col-md-10 offset-1">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsAdmin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CretedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAdmin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CretedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedUsername)
                </td>
                <td>
                    <a href="/EvernoteUser/Edit/@item.Id" class="btn btn-warning btn-sm" title="Edit">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="/EvernoteUser/Details/@item.Id" class="btn btn-info btn-sm" title="Details">
                        <i class="fa fa-search"></i>
                    </a>
                    <a href="/EvernoteUser/Delete/@item.Id" class="btn btn-danger btn-sm" title="Delete">
                        <i class="fa fa-trash"></i>
                    </a>

                </td>
                
            </tr>
            }

        </table>



    </div>

    </div>


  
@model IEnumerable<MyEvernote.Entities2.Note>

@{
    ViewBag.Title = "Notlar";
}
<br />
<br />
<div class="row">
    <div class="col-md-10 offset-1">
        <h2>Index</h2>
        <br />
        <p>
            @Html.ActionLink("Yeni Ekle", "Create")
        </p>
       
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDraft)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LikeCount)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDraft)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LikeCount)
                    </td>

                    <td>
                        <a href="/Note/Edit/@item.Id" class="btn btn-warning btn-sm">
                            <i class="fa fa-edit"></i>Edit
                        </a>
                        <a href="/Note/Details/@item.Id" class="btn btn-primary btn-sm">
                            <i class="fa fa-search"></i>Details
                        </a>
                        <a href="/Note/Delete/@item.Id" class="btn btn-danger btn-sm">
                            <i class="fa fa-remover"></i>Delete
                        </a>
                      
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
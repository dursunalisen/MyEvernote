@using MyEvernote.Entities2.Messages;
@using MyEvernote.WebApp.ViewModels

@model ErrorViewModel
@{
    ViewBag.Title = Model.Title;
}


<link href="~/Content/login-register.css" rel="stylesheet" />



<section class="login-info">
    <div class="container">
        <div class="row main ">
            <div class="form-header">
                <h1 class="text-center">@Model.Header</h1>
            </div>
            <div class="main-content">
                <div class="text-danger">
                    <h2><i class="fa fa-remove"></i>&nbsp;&nbsp;&nbsp;@Model.Title</h2>
                    <hr />
                    <p class="text-justify">
                        @foreach (ErrorMessageObj msg in Model.Items)
                        {
                            @msg.Message<br>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
@{
    string js = string.Empty;
    if (Model.IsRedirecting)
    {
        js = "setTimeout(function () { window.location ='" + Model.IsRedirectingUrl + "'; }, " +
                    "" + Model.IsRedirectingTimeout + ");";

    }

}
<script>
        $(function () {
          
            @*Raw haliyle ne görüyorsan o şekilde ekle demek istedik @js  diye eklesek bazı satırları okumayabilirdi*@

            @Html.Raw(js);

        });

</script>



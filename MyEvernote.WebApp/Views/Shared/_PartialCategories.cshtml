@using MyEvernote.BusinessLayer2
@using MyEvernote.Entities2

@{ 
    <!-- Kategori manager klasında listelemesini istemiştik onu kullandık burada-->

    CategoryManager categoryManager = new CategoryManager();
    List<Category> list = categoryManager.List();

}




<h1 class="my-4">Kategoriler</h1>
<div class="list-group">
    <a href="/Home/Index" class="list-group-item"><i class="fa fa-arrow-right"></i>Tümü</a>
    @foreach (Category cat in list)
    {
        <a href="/Home/ByCategory/@cat.Id" title="@cat.Description" class="list-group-item"><i class="fa fa-arrow-right"></i>@cat.Title</a>
    }


</div>